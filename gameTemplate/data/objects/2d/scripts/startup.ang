
/************************************************************************
*    FILE NAME:       menu.ang
*
*    DESCRIPTION:     Scripts for controlling/animating menu interface
************************************************************************/

/************************************************************************
*    DESC:  Do a fade in and out
************************************************************************/
void StartUp_FadeIn( Sprite & sprite )
{
    CColor current(0,0,0,1);
    sprite.setAdditiveColor( current );
    
    Hold( 250 );
            
    CColor final(1,1,1,1);
    AdditiveColorTo( 500, final, sprite );
    
    DispatchEvent( 0xA000 );
}

void StartUp_FadeOut( Sprite & sprite )
{
    CColor current(0,0,0,1);
    AdditiveColorTo( 500, current, sprite );
    
    Hold( 1000 );
    
    DispatchEvent( 0xB000 );
}
