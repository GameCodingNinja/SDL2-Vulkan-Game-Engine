{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "make",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "make clean",
            "problemMatcher": [],
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "make clean; make",
            "problemMatcher": [],
        },
        {
            "label": "Execute",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "${workspaceRoot}/c_consoleTestApp",
            "problemMatcher": []
        }
    ]
}